{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "types": ["node", "hardhat"],
  },
  "include": ["src/**/*", "typechain-types/**/*"],
  "exclude": ["node_modules", "dist", "contracts", "test"],
}
